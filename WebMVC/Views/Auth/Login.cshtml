    <script>
        $(window).on('load', function () {
            if (feather) {
                feather.replace({
                    width: 14,
                    height: 14
                });
            }
        })
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var Information = '@(ViewBag.Information)';
            var Error = '@(ViewBag.Error)';
            var Success = '@(ViewBag.Success)';
            var Warning = '@(ViewBag.Warning)';
            if (Information !== "") {
                info(Information)
            }
            if (Error !== "") {
                error(Error)
            }
            if (Success !== "") {
                success(Success)
            }
            if (Warning !== "") {
                warning(Warning)
            }
        });
    </script>
