
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Add Operation</h4>
    </div>
    <div class="card-body">
        <form action="/Operation/Add" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Operation Name</label>
                        <input type="text" class="form-control" name="OperationName">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right" action="">Add Operation</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>

