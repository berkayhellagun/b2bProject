
@using WebMVC
@*@model List<WebMVC.Models.ProductModel>
*@<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>B2B Platform</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/HomeTemplate/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/HomeTemplate/css/style.css" rel="stylesheet">
</head>

<body>
    
    <!-- Category and Product Start -->
    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            @await Component.InvokeAsync("CategoryGetList")
            @await Component.InvokeAsync("SupplierListByCategoryId", new { categoryId = @ViewBag.categoryId })
        </div>
    </div>
    <!-- Category and Product End -->
   
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/HomeTemplate/lib/easing/easing.min.js"></script>
    <script src="~/HomeTemplate/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/HomeTemplate/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/HomeTemplate/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/HomeTemplate/js/main.js"></script>
</body>

</html>


