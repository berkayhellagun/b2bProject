@model List<WebMVC.Models.CategoryModel>

<style>
    .custom-list-item {
        background-color: #f5f5f5; /* Gri */
        color: #333; /* Karanlık Gri */
        border: none;
        transition: all 0.3s ease;
    }

        .custom-list-item:hover {
            background-color: #e9e9e9; /* Açık Gri */
            color: #000; /* Siyah */
        }

        .custom-list-item a {
            text-decoration: none; /* Link altını çizme */
            color: #333; /* Link metnini Karanlık Gri yap */
        }

        .custom-list-item:hover a {
            color: #000; /* Hover durumunda link metnini Siyah yap */
        }
</style>

<div class="col-lg-3 d-lg-block d-none">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Sektörler</h6>
            <button class="btn btn-link text-white" type="button" data-bs-toggle="collapse" data-bs-target="#categoriesCollapse" aria-expanded="true" aria-controls="categoriesCollapse">
                <i class="fas fa-angle-down"></i>
            </button>
        </div>
        <div class="collapse show" id="categoriesCollapse">
            <ul class="list-group list-group-flush">
                @foreach (var category in Model)
                {
                    <li class="list-group-item custom-list-item">
                        <a href="/Supplier/CategoryDetailForSupplier/@category.Id">@category.CategoryName</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

