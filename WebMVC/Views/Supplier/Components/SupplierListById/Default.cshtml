@model WebMVC.Models.DetailModel.SupplierDetailModel

<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">
                    <div class="carousel-item active">
                        @if (@Model.SupplierImage == "" || @Model.SupplierImage == null)
                        {
                            <img class="w-100 h-100" src="~/Images/SupplierImage/default.png" alt="Image">
                        }
                        <img class="w-100 h-100" src="~/@Model.SupplierImage" alt="Image">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@Model.SupplierName</h3>
            <h5 class="font-weight-semi-thin">Bu firma @Model.SupplierCountry içerisinde bulunmakta.</h5>
            <div class="d-flex mb-3">
                <h5 class="font-weight-semi-thin">Kategori: @Model.CategoryName</h5>
                <a href="/Supplier/CategoryDetailForSupplier/@Model.CategoryId">Benzer Firmalar için Tıklayınız..</a>
            </div>
        </div>
    </div>

    <div class="row px-xl-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-2">Bilgi</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-pane-3">İletişim Bigileri</a>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-pane-1">
                    <p>@Model.SupplierDescription</p>
                </div>
                <div class="tab-pane fade" id="tab-pane-2">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item px-0">
                                    Firma @Model.SupplierCountry içerisinde bulunmaktadır.
                                </li>
                                <li class="list-group-item px-0">
                                    Kuruluş tarihi: @Model.SupplierFoundYear
                                </li>
                                <li class="list-group-item px-0">
                                    Çalışan Sayısı : @Model.EmployeeCount
                                </li>
                                <li class="list-group-item px-0">
                                    Firma Vergi No: @Model.SupplierTaxNo
                                </li>
                                <li class="list-group-item px-0">
                                    Firma Cirosu: @Model.SupplierGiro
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="tab-pane-3">
                    <div class="row">
                        <div cclass="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item px-0">
                                    Email Adresi: @Model.SupplierMail
                                </li>
                                <li class="list-group-item px-0">
                                    Telefon Numarası: @Model.SupplierTelephoneNumber
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Firma Sorumluları</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="card product-item border-0 mb-4">
                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                    <img class="img-fluid w-100" src="" alt="">
                </div>
                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                    <h6 class="text-truncate mb-3">@Model.PersonName</h6>
                    <div class="d-flex justify-content-center">
                        <h6>@Model.PersonEmail</h6><h6 class="text-muted ml-2"></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>