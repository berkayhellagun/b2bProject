@{
    ViewData["Title"] = "Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Add Product</h4>
        <p class="card-category">Complete Product</p>
    </div>
    <div class="card-body">
        <form action="/Product/Add" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Product Name</label>
                        <input type="text" class="form-control" name="ProductName" required>
                    </div>
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Product Supplier Id</label>
                        <input type="number" class="form-control" name="ProductSupplierId" required>
                    </div>
                    <div class="form-group bmd-form-group">
                        <label for="ProductCategoryId" class="bmd-label-floating">Product Category</label>
                        <select id="ProductCategoryId" name="ProductCategoryId" class="form-control">
                            <!-- Categories will be populated here -->
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Product Description</label>
                        <textarea class="form-control" name="ProductDescription" required></textarea>
                    </div>
                    <div class="form-group bmd-form-group">
                        <label for="ProductCountry" class="bmd-label-floating">Product Country</label>
                        <select id="ProductCountry" name="ProductCountry" class="form-control">
                            <!-- Countries will be populated here -->
                        </select>
                    </div>
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Product Price</label>
                        <input type="number" step="0.01" class="form-control" name="ProductPrice" required>
                    </div>
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Product In Stock</label>
                        <input type="number" class="form-control" name="ProductInStock" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right" action="">Add Product</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>
