@using WebMVC
@model List<WebMVC.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Category and Product Start -->
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
        @await Component.InvokeAsync("CategoryGetList")
        @await Component.InvokeAsync("ProductGetList")
    </div>
</div>
<!-- Category and Product End -->
<!-- Top Products Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">En Çok Satan Ürünler</span></h2>
    </div>
    <div class="row px-xl-5 pb-3 animate__animated animate__fadeIn">
        @await Component.InvokeAsync("MostOrderedProduct")
    </div>
</div>
<!-- Top Products End -->
<!-- Products Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Üretimi Yeni Ürünler</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            @if (@item.ProductionDate.AddDays(10) >= DateTime.Now)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 shadow mb-4">
                        @*son on gün içerisinde gelen ürünler listesi*@
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@item.ProductName</h6>
                            <div class="d-flex justify-content-center">
                                <h6>@item.ProductPrice</h6><h6 class="text-muted ml-2"></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/Detail/Index/@item.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- Products End -->
<!-- Vendor Start -->
<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">En Çok Satış Yapan Firmalar</span></h2>
    </div>
    <div class="row px-xl-5">
        @await Component.InvokeAsync("SupplierGetList")
    </div>
</div>
<!-- Vendor End -->
<!-- Subscribe Start -->
<div class="container-fluid bg-secondary my-5">
    <div class="row justify-content-md-center py-5 px-xl-5">
        <div class="col-md-6 col-12 py-5">
            <div class="text-center mb-2 pb-2">
                <h2 class="section-title px-5 mb-3"><span class="bg-secondary px-2">Tedarikçi Mi Olmak İstiyorsun</span></h2>
                <p>Tedarikçi olmak için Email adresini yazman yeterli</p>
            </div>
            <form action="">
                <div class="input-group">
                    <input type="text" class="form-control border-white p-4" placeholder="Email..">
                    <div class="input-group-append">
                        <button class="btn btn-primary px-4">Tedarikçi Ol</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Subscribe End -->