<div class="col-lg-3 d-lg-block d-none">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Sektörler</h6>
            <button class="btn btn-link text-white" type="button" data-bs-toggle="collapse" data-bs-target="#categoriesCollapse" aria-expanded="true" aria-controls="categoriesCollapse">
                <i class="fas fa-angle-down"></i>
            </button>
        </div>
        <div class="collapse show" id="categoriesCollapse">
            <ul class="list-group list-group-flush">
                @foreach (var category in Model)
                {
                    <li class="list-group-item custom-list-item">
                        <a href="/Home/CategoryDetails/@category.Id">@category.CategoryName</a>
                    </li>
