@model List<WebMVC.Models.UserModel>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <h5 class="card-header">User Table</h5>
    <div class="table-responsive text-nowrap">
    <a href="/User/Add" class="badge bg-label-primary me-2" style="margin-left:10px;">Yeni Kullanıcı Ekle</a>
        <table class="table">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>User</th>
                    <th>Supplier</th>
                    <th>Email</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.FirstName @item.LastName</strong></td>
                        <td>@item.SupplierName</td>
                        <td>@item.Email</td>
                        <td><span class="badge bg-label-primary me-2">@item.Status</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/User/Update/@item.UserId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/User/Remove/@item.UserId"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


