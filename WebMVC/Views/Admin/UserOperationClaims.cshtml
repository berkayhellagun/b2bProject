@model List<WebMVC.Models.UserOperationClaimModel>
@{
    ViewData["Title"] = "UserOperationClaim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">User Operation Table</h5>
    <div class="table-responsive text-nowrap">
    <a href="/UserOperation/Add" class="badge bg-label-primary me-2" style="margin-left:10px;">Yeni Kullanıcı Operasyonu Ekle</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>Operation Id</th>
                    <th>Operation Name</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserOperationId</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.UserId</strong></td>
                        <td>@item.UserName</td>
                        <td>@item.OperationId</td>
                        <td><span class="badge bg-label-primary me-2">@item.OperationName</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/UserOperation/Update/@item.UserOperationId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/UserOperation/Remove/@item.UserOperationId"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
