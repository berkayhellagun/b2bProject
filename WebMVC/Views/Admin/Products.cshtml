@model List<WebMVC.Models.ProductModel>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Product Table</h5>
    <div class="table-responsive text-nowrap">
        <a href="/Product/Add" class="badge bg-label-primary me-2" style="margin-left:10px;">Yeni Ürün Ekle</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Name</th>
                    <th>Supplier</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.ProductName</strong></td>
                        <td>@item.ProductSupplierId</td>
                        <td>@item.ProductCategoryId</td>
                        <td><span class="badge bg-label-primary me-2">@item.ProductionDate</span></td>
                        <td><span class="badge bg-label-primary me-2">@item.ProductInStock</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Product/Update/@item.ProductId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/Product/Remove/@item.ProductId"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

