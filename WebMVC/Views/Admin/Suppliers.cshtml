@model List<WebMVC.Models.SupplierModel>
@{
    ViewData["Title"] = "Suppliers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Supplier Table</h5>
    <div class="table-responsive text-nowrap">
    <a href="/Supplier/Add" class="badge bg-label-primary me-2" style="margin-left:10px;">Yeni Firma Ekle</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Supplier Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Telephone Number</th>
                    <th>User</th>
                    <th>Giro</th>
                    <th>Country</th>
                    <th>Found Year</th>
                    <th>Tax No</th>
                    <th>Employee Count</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SupplierId</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.SupplierName</strong></td>
                        <td>@item.SupplierMail</td>
                        <td>@item.SupplierTelephoneNumber</td>
                        <td><span class="badge bg-label-primary me-2">@item.SupplierContactPersonId</span></td>
                        <td><span class="badge bg-label-primary me-2">@item.SupplierGiro</span></td>
                        <td>@item.SupplierCountry</td>
                        <td>@item.SupplierFoundYear</td>
                        <td>@item.SupplierTaxNo</td>
                        <td><span class="badge bg-label-primary me-2">@item.EmployeeCount</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Supplier/Update/@item.SupplierId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/Supplier/Remove/@item.SupplierId"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

